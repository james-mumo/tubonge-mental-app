<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".userEvents.PeerCounselling">

    <RelativeLayout
        android:id="@+id/topRelLayout"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="?attr/headercolor">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/bungee"
            android:rotation="2"
            android:text="Connect with Peers Online"
            android:textColor="?attr/headertextcolor"
            android:textSize="19dp"
            android:translationZ="333dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="110dp"
            android:fontFamily="@font/bungee"
            android:rotation="-2"
            android:rotationX="0"
            android:text="Tubonge Connects Users To Their Peers Online, Kinda Like An Online-Alcohol-Anonymous, LOL"
            android:textColor="?attr/headertextcolor"
            android:textSize="13dp"
            android:translationZ="333dp" />

        <ImageView
            android:layout_width="79dp"
            android:layout_height="59dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="20dp"
            android:src="@drawable/mapp" />

        <ImageView
            android:layout_width="109dp"
            android:layout_height="99dp"
            android:layout_alignParentEnd="false"
            android:layout_marginTop="80dp"
            android:src="@drawable/graphegg" />

        <ImageView
            android:layout_width="131dp"
            android:layout_height="171dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="90dp"
            android:src="@drawable/graphgreen" />


    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/viewPeers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bungee"
                android:text="View Some of The Popular Online Peer Communities"
                android:textColor="?attr/headercolor"
                android:textSize="10dp" />

            <HorizontalScrollView
                android:id="@+id/viewAllGroups"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/viewPeers"
                android:layout_marginTop="3dp"
                android:scrollIndicators="none">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="80dp">


                    <androidx.cardview.widget.CardView
                        android:id="@+id/addictionGroups"
                        android:layout_width="230dp"
                        android:layout_height="match_parent"
                        app:cardBackgroundColor="@color/colorPrimary"
                        app:cardCornerRadius="3dp"
                        app:cardElevation="4dp"
                        app:cardUseCompatPadding="true">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:padding="4dp">

                            <ImageView
                                android:id="@+id/peerImg"
                                android:layout_width="55dp"
                                android:layout_height="55dp"
                                android:layout_marginEnd="10dp"
                                android:scaleType="fitXY"
                                android:src="@drawable/marijuana" />

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <TextView
                                    android:id="@+id/groupName"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/bungee"
                                    android:text="Addiction Support"
                                    android:textColor="?attr/headertextcolor"
                                    android:textSize="11dp" />

                                <TextView
                                    android:id="@+id/groupShortBio"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/groupName"
                                    android:text="Addiction Support"
                                    android:textColor="?attr/headertextcolor" />

                            </RelativeLayout>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/mentalGroups"
                        android:layout_width="300dp"
                        android:layout_height="match_parent"
                        android:layout_toRightOf="@+id/addictionGroups"
                        app:cardBackgroundColor="@color/colorPrimary"
                        app:cardCornerRadius="3dp"
                        app:cardElevation="4dp"
                        app:cardUseCompatPadding="true">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:padding="4dp">

                            <ImageView
                                android:id="@+id/mentaLImg"
                                android:layout_width="55dp"
                                android:layout_height="55dp"
                                android:layout_marginEnd="10dp"
                                android:scaleType="fitXY"
                                android:src="@drawable/angryface" />

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <TextView
                                    android:id="@+id/mentalName"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/bungee"
                                    android:text="Addiction Support"
                                    android:textColor="?attr/headertextcolor"
                                    android:textSize="11dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/mentalName"
                                    android:text="Addiction Support"
                                    android:textColor="?attr/headertextcolor" />

                            </RelativeLayout>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/suicideGroups"
                        android:layout_width="300dp"
                        android:layout_height="match_parent"
                        android:layout_toRightOf="@+id/mentalGroups"
                        app:cardBackgroundColor="@color/colorPrimary"
                        app:cardCornerRadius="3dp"
                        app:cardElevation="4dp"
                        app:cardUseCompatPadding="true">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:padding="4dp">

                            <ImageView
                                android:layout_width="55dp"
                                android:layout_height="55dp"
                                android:layout_marginEnd="10dp"
                                android:scaleType="fitXY"
                                android:src="@drawable/gibbet1" />

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <TextView
                                    android:id="@+id/suicideName"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/bungee"
                                    android:text="Addiction Support"
                                    android:textColor="?attr/headertextcolor"
                                    android:textSize="11dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/suicideName"
                                    android:text="Addiction Support"
                                    android:textColor="?attr/headertextcolor" />

                            </RelativeLayout>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/stressGroups"
                        android:layout_width="300dp"
                        android:layout_height="match_parent"
                        android:layout_toRightOf="@+id/suicideGroups"
                        app:cardBackgroundColor="@color/colorPrimary"
                        app:cardCornerRadius="3dp"
                        app:cardElevation="4dp"
                        app:cardUseCompatPadding="true">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:padding="4dp">

                            <ImageView
                                android:layout_width="55dp"
                                android:layout_height="55dp"
                                android:layout_marginEnd="10dp"
                                android:scaleType="fitXY"
                                android:src="@drawable/lonely" />

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <TextView
                                    android:id="@+id/stressName"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/bungee"
                                    android:text="Addiction Support"
                                    android:textColor="?attr/headertextcolor"
                                    android:textSize="11dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/stressName"
                                    android:text="Addiction Support"
                                    android:textColor="?attr/headertextcolor" />

                            </RelativeLayout>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </RelativeLayout>

            </HorizontalScrollView>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/allGroupsRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_below="@+id/viewAllGroups"
                android:layout_marginTop="5dp" />

        </RelativeLayout>


    </ScrollView>
</LinearLayout>