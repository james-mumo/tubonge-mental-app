<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="0dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:focusable="true"
        android:padding="2dp"
        android:scrollbars="vertical"
        app:cardBackgroundColor="?attr/headercolor"
        app:cardCornerRadius="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="2dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/professionalProfileImage"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/angryface" />

            <TextView
                android:id="@+id/cardProfessionalName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="1dp"
                android:text="James James"
                android:textAllCaps="true"
                android:textColor="?attr/headertextcolor"
                android:textSize="11sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/cardProfessionalSpeciality"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="1dp"
                    android:text="Stress Dealing"
                    android:textColor="?attr/headertextcolor"
                    android:textSize="11sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/cardProfessionalStars"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="1dp"
                    android:paddingStart="5dp"
                    android:text="0 Stars"
                    android:textAllCaps="true"
                    android:textColor="?attr/headertextcolor"
                    android:textSize="9sp"
                    android:textStyle="bold" />
            </LinearLayout>
            <!--            <TextView-->
            <!--                android:id="@+id/cardProfessionalSchool"-->
            <!--                android:layout_width="wrap_content"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:paddingStart="5dp"-->
            <!--                android:padding="1dp"-->
            <!--                android:text="44 Stars"-->
            <!--                android:textColor="?attr/headertextcolor"-->
            <!--                android:textStyle="bold" />-->

        </LinearLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>