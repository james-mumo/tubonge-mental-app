<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    android:orientation="vertical"
    tools:context=".userEvents.SuicidePrevention">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/suicidalHeader"
        android:layout_width="400dp"
        android:layout_height="170dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView21"
            android:layout_width="320dp"
            android:layout_height="122dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/bungee"
            android:paddingStart="10dp"
            android:text="@string/suicidal_text"
            android:textColor="?attr/headertextcolor"
            android:textSize="15dp"
            android:translationZ="100dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:background="@drawable/search_edittext"
            android:fontFamily="@font/bungee"
            android:paddingHorizontal="4dp"
            android:rotation="-4"
            android:text="See A Professional"
            android:textColor="?attr/headertextcolor"
            android:textSize="15dp"
            android:translationZ="110dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.756"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/imageView24"
            android:layout_width="118dp"
            android:layout_height="129dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.056"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/gibbet" />

        <ImageView
            android:id="@+id/imageView33"
            android:layout_width="213dp"
            android:layout_height="119dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.85"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/graph1" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ListView
        android:id="@+id/suicide_list_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@+id/suicidalHeader"
        android:divider="@null"
        android:dividerHeight="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/suicidalHeader" />

</androidx.constraintlayout.widget.ConstraintLayout>
